<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author Name"
            android:textSize="@dimen/app_font_medium"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imgInfoAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_info_outline"
        android:layout_alignRight="@+id/tilAuthor"
        android:layout_alignTop="@+id/tilAuthor"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilAuthor"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/edtQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:minLines="3"
            android:hint="Quote"
            android:textSize="@dimen/app_font_medium"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imgInfoQuote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_info_outline"
        android:layout_alignRight="@+id/tilQuote"
        android:layout_alignTop="@+id/tilQuote"/>

</RelativeLayout>