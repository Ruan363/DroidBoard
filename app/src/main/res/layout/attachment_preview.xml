<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:paddingTop="5dp"
    android:paddingEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAttPreview"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_add_white_round_padding"/>

    <TextView
        android:id="@+id/tvAttDescription"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imgAttPreview"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imgAttPreview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/app_font_small"
        android:text="Front Door"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>